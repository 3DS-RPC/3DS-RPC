extends ../layouts/authentication.pug

block config
    - var pageTitle = 'Register'

block content
    .container
        .row.justify-content-center
            .col-lg-7
                .card.shadow-lg.border-0.rounded-lg.mt-5
                    .card-header
                        h3.text-center.font-weight-light.my-4 Registering
                    .card-body.text-center
                        h4 In order to use this service, you must first add a bot account to your friends roster.
                        p#botFC The account's friend code is X. Please add it before continuing to the login page.
                        .small
                          | By using this service, you agree to the
                          a(href='/terms.html') Terms and Services
                        .mt-4.mb-0
                            .d-grid
                                a.btn.btn-primary.btn-block(href='login.html') Register
